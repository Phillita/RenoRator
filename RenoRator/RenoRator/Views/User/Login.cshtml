@{
    ViewBag.Title = "Login";
    Layout = "~/Views/shared/main_layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>User</legend>

        <div class="editor-label">
            Email:
        </div>
        <div class="editor-field">
            @Html.Editor("email")
        </div>
       
        <div class="editor-label">
            Password:
        </div>
        <div class="editor-field">
            @*@Html.EditorFor(model => model.password)*@
            <input class="input-validation-error text-box single-line" id="password" name="password" type="password">
        </div>

        <p>
            <input type="submit" value="Login" />
        </p>
    </fieldset>
}
