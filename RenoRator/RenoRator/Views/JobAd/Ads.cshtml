@model IEnumerable<RenoRator.Models.JobAd>
@using System.Linq

@{
    ViewBag.Title = "Ads";
    Layout = "~/Views/shared/main_layout.cshtml";
}

<h2>Ads</h2>

<p>
    @Html.ActionLink("Create New", "Post")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.userID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.addressID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.priceRangeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tags)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.galleryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.targetEndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.active)
        </th>
