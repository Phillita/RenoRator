    foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.userID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.addressID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.priceRangeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tags)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.galleryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.targetEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.active)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.jobAdID }) |
                @Html.ActionLink("Details", "Details", new { id=item.jobAdID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.jobAdID })
            </td>
        </tr>
    }
}

</table>
